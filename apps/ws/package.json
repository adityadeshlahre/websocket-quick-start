    "@repo/types": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.32.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "@repo/db": "workspace:*",
    "@types/ws": "^8.5.13",
